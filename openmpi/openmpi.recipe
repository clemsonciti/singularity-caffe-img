BootStrap: docker
From: nvidia/cuda:9.0-devel-ubuntu16.04

# OpenMPI version 4.0.0
%post
    apt-get update -y
    apt-get install -y --no-install-recommends \
        file \
        hwloc \
        openssh-client \
        libibverbs-dev \
        wget
    rm -rf /var/lib/apt/lists/*

%post
    mkdir -p /tmp && wget -q --no-check-certificate -P /tmp https://download.open-mpi.org/release/open-mpi/v4.0/openmpi-4.0.0.tar.bz2
    tar -x -f /tmp/openmpi-4.0.0.tar.bz2 -C /tmp -j
    cd /tmp/openmpi-4.0.0 && ./configure --prefix=/usr/local/openmpi --disable-getpwuid --enable-orterun-prefix-by-default --with-cuda --with-verbs
    make -j4
    make -j4 install
    rm -rf /tmp/openmpi-4.0.0.tar.bz2 /tmp/openmpi-4.0.0
%environment
    export PATH=/usr/local/openmpi/bin:$PATH
    export LD_LIBRARY_PATH=/usr/local/openmpi/lib:$LD_LIBRARY_PATH
